@page "/signup"
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
<PageTitle>Signup</PageTitle>

    
<EditForm Model="@userSignup" OnValidSubmit="@HashPassword">
         
    <div class="container">
        <h2>Signup</h2>
            
                <label for="uname">Username:</label><br>
                <InputText required type="text" id="uname" placeholder="Username" @bind-Value="userSignup.Username" /><br><br>

                <label for="pass">Password:</label><br>
                <InputText required type="password" id="pass" placeholder="Password" @bind-Value="userSignup.Password" /><br><br>

                <label for="email">Email:</label><br>
                <InputText required type="email" id="email" placeholder="Email" @bind-Value="userSignup.Email" /><br><br>

            <div>
                <input type="submit" value="Submit">
			</div>

            <p class="error-message" id="login-error">@errorMessage</p>
    </div>
    
</EditForm> 